{% extends 'base_error.html.twig' %}

{% block title %}Erreur {{ status_code }}{% endblock %}

{% block body %}
	<div class="d-flex flex-column justify-content-center align-items-center" style="height: 80vh; text-align: center;">
		<h1 class="display-1 text-danger">{{ status_code }}</h1>
		<h2>{{ status_text }}</h2>
		<p class="text-muted">
			Une erreur est survenue pendant le traitement de votre requête.<br>
			Veuillez réessayer plus tard ou retourner à l'accueil.
		</p>
		<a href="{{ path('homepage') }}" class="btn btn-primary mt-3">Retour à l'accueil</a>
	</div>
{% endblock %}
