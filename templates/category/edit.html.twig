{% extends 'base.html.twig' %}

{% block body %}
	{{ form_start(form) }}
	<fieldset>
		<legend class="mb-4">Modification de la  Catégorie {{ categorie.name }}</legend>

		<div class="card shadow-sm border-0 mb-4">
			<div class="card-body">
				<div class="row g-3">
					<div class="col-md-6">
						<div class="mb-3">
							{{ form_row(form.name) }}
						</div>


					</div>

				</div>

				<div class="text-end mt-4">
					<button type="submit" class="btn btn-primary">
						<i class="fa-regular fa-floppy-disk me-1"></i> Enregistrer
					</button>
				</div>
			</div>
		</div>
	</fieldset>
	{{ form_end(form) }}
{% endblock %}


{% block title %}
	Modification de la  Catégorie {{ categorie.name }}
{% endblock %}

