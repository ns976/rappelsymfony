{% extends 'base.html.twig' %}

{% block title %}réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="container container--mini">
            <h1 class="mb-1 text-center">Mot de passe oublié ?</h1>
            <p class="fs-14 text-gray text-center">Entrez votre email et nous vous enverrons un lien de
                réinitialisation.</p>
            <div class="woocommerce">
                {{ form_start(requestForm) }}
                <div class="form-group mb-4">
                    {{ form_label(requestForm.email) }}
                    {{ form_widget(requestForm.email) }}
                    <div class="invalid-feedback">{{ form_errors(requestForm.email) }}</div>
                    <small>{{ form_help(requestForm.email) }}</small>

                </div>

                <div class="clear"></div>
                <p class="woocommerce-form-row form-row">
                    <button class="btn btn-primary btn-block mb-4" type="submit">Réinitialiser le mot de passe</button>
                </p>
                <div class="row">
                    <div class="col-12">
                        <hr class="mt-5 mb-4 border-secondary-subtle">
                        <div class="d-flex gap-4 justify-content-center">
                            <a href="{{ path('app_login') }}" class="link-secondary text-decoration-none">Se
                                connecte</a>
                            <a href="#"
                               class="link-secondary text-decoration-none">S'inscrire</a>
                        </div>
                    </div>
                </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>


{% endblock %}
